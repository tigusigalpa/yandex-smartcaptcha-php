{
    "name": "tigusigalpa/yandex-smartcaptcha-php",
    "description": "PHP SDK для Yandex SmartCaptcha с полной поддержкой Laravel. Управление капчами, валидация пользователей, интеграция с Laravel.",
    "type": "library",
    "keywords": [
        "yandex",
        "smartcaptcha",
        "captcha",
        "laravel",
        "php",
        "sdk",
        "validation",
        "security"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Igor Sazonov",
            "email": "sovletig@gmail.com",
            "homepage": "https://github.com/tigusigalpa"
        }
    ],
    "homepage": "https://github.com/tigusigalpa/yandex-smartcaptcha-php",
    "support": {
        "issues": "https://github.com/tigusigalpa/yandex-smartcaptcha-php/issues",
        "source": "https://github.com/tigusigalpa/yandex-smartcaptcha-php"
    },
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.0|^8.0",
        "ext-json": "*",
        "psr/log": "^1.0|^2.0|^3.0",
        "tigusigalpa/yandex-cloud-client-php": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0|^11.0",
        "orchestra/testbench": "^6.0|^7.0|^8.0|^9.0",
        "mockery/mockery": "^1.5",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "suggest": {
        "illuminate/support": "Required for Laravel integration (^8.0|^9.0|^10.0|^11.0|^12.0)",
        "tigusigalpa/yandex-cloud-client-php": "Required for IAM token management (^1.0)"
    },
    "autoload": {
        "psr-4": {
            "Tigusigalpa\\YandexSmartCaptcha\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tigusigalpa\\YandexSmartCaptcha\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src --level=8",
        "cs-check": "phpcs src tests --standard=PSR12",
        "cs-fix": "phpcbf src tests --standard=PSR12"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tigusigalpa\\YandexSmartCaptcha\\Laravel\\SmartCaptchaServiceProvider"
            ],
            "aliases": {
                "SmartCaptcha": "Tigusigalpa\\YandexSmartCaptcha\\Laravel\\Facades\\SmartCaptcha"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
