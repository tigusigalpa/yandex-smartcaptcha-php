# Yandex SmartCaptcha Configuration

# OAuth Token for API authentication (required for captcha management)
# Will be automatically exchanged for IAM token
YANDEX_SMARTCAPTCHA_OAUTH_TOKEN=your-oauth-token-here

# Server Secret Key for token validation
YANDEX_SMARTCAPTCHA_SECRET_KEY=your-secret-key-here

# Client Key for frontend widget
YANDEX_SMARTCAPTCHA_CLIENT_KEY=your-client-key-here

# Yandex Cloud Folder ID
YANDEX_SMARTCAPTCHA_FOLDER_ID=your-folder-id-here

# Logging
YANDEX_SMARTCAPTCHA_LOGGING=false
YANDEX_SMARTCAPTCHA_LOG_CHANNEL=stack

# HTTP Client Timeout (in seconds)
YANDEX_SMARTCAPTCHA_TIMEOUT=30
